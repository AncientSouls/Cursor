  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--require",
        "ts-node/register",
        "source-map-support/register",
        "--timeout",
        "999999",
        "${workspaceFolder}/src/tests/index.ts",
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}